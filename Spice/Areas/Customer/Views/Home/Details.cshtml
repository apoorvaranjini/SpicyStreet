@model Spice.Models.ShoppingCart
@using Spice.Extensions
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<form method="post">

    <div class="border backgroundWhite row ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 pb-4 d-none d-md-none">
            <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px;border:1px solid #bbb9b9;" />
        </div>
        <div class="col-md-8">
            <h3 class="text-dark-50">Item Details</h3>
            <br />
            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="MenuItem.Name" class="col-md-form-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="MenuItem.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="MenuItem.Description" class="col-md-form-label"></label>
                </div>
                <div class="col-md-8">
                    <div class="border p-4">
                        @Html.Raw(Model.MenuItem.Description)
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="MenuItem.Price" class="col-md-form-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="MenuItem.Price" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="MenuItem.CategoryID" class="col-md-form-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="MenuItem.Category.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="MenuItem.SubCategoryID" class="col-md-form-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="MenuItem.SubCategory.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="MenuItem.Spicyness" class="col-md-form-label"></label>
                </div>
                <div class="col-md-8">
                    <select asp-for="MenuItem.Spicyness" id="SpicynessId" disabled asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="Count" class="col-md-form-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Count" class="form-control" />
                </div>
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                </div>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
                <div class="col-md-4">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control">Add to Cart</button>
                </div>
            </div>
        </div>
        <div class="col-3 offset-1 d-none d-md-block">
            <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px;border:1px solid #bbb9b9;" />
        </div>

    </div>
    <input asp-for="MenuItemId" hidden />
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

